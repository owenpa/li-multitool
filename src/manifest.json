{
  "manifest_version": 3,
  "name": "LinkedIn Multitool",
  "description": "Add various useful features to LinkedIn.",
  "author": "Owen H.",
  "version": "0.9",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "run_at": "document_idle",
    "js": ["main.js"],
    "matches": ["https://www.linkedin.com/*"]
  }],
  "permissions": ["storage"]
}